
root = true


[*]
end_of_line = lf
insert_final_newline = false

[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab


[lib/**.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace =  true

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
